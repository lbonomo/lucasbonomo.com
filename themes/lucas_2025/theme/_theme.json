{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"custom": false,
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#333333"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#ffb900"
				}
			]
		},
		"typography": {
			"customFontSize": false,
			"fontFamilies": [
				{
					"name": "Roboto",
					"slug": "roboto",
					"fontFamily": "Roboto"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "12px"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "18px"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "24px"
				}
			]
		},
		"layout": {
			"contentSize": "1140px",
			"wideSize": "800px",
			"allowCustomContentAndWideSize": true,
			"allowEditing": true
		},
		"spacing": {
			"blockGap": null
		}

	},
	"styles": {
		"blocks": {
			"core/button": {
				"spacing": {},
				"color": {
					"background": "var(--wp-preset-color-primary)",
					"text": "var(--wp-preset-color-secondary)"
				},
				"typography": {
					"fontSize": "var(--wp-preset-fontSizes-small)"
				},
				"border": {
					"radius": "2px"
				}
			}
		}
	}
}