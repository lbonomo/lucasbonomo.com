{
	"name": "lb25",
	"description": "Lucas Bonomo 2025 (Tailwind)",
	"scripts": {
		"build:css:style": "tailwindcss -i ./src/css/style.css -o ./assets/css/style.css",
		"build:css:blocks": "tailwindcss -i ./src/css/blocks-entry.css -o ./assets/css/blocks.css",
		"build:css": "npm run build:css:style && npm run build:css:blocks",
		"build:js": "terser src/js/main.js -o assets/js/main.min.js",
		"build": "npm run build:css && npm run build:js",
		"watch:css:style": "tailwindcss -i ./src/css/style.css -o ./assets/css/style.css --watch",
		"watch:css:blocks": "tailwindcss -i ./src/css/blocks-entry.css -o ./assets/css/blocks.css --watch",
		"watch:css": "npm run watch:css:style & npm run watch:css:blocks & wait",
		"watch:js": "chokidar 'src/js/*.js' -c 'npm run build:js'",
		"watch": "npm run watch:css & npm run watch:js & wait"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.13",
		"@tailwindcss/postcss": "^4.1.13",
		"chokidar-cli": "^3.0.0",
		"tailwindcss": "^4.1.13",
		"terser": "^5.44.0"
	}
}
