{
	"name": "lb25",
	"description": "Lucas Bonomo 2025 (Tailwind)",
	"scripts": {
		"build:css": "tailwindcss -i ./src/css/style.css -o ./assets/css/style.css && tailwindcss -i ./src/css/blocks/list-historial.css -o ./assets/css/blocks/list-historial.css",
		"build:js": "terser src/js/blocks.js -o assets/js/blocks.min.js && terser src/js/main.js -o assets/js/main.min.js",
		"build": "npm run build:css && npm run build:js",
		"watch:css": "tailwindcss -i ./src/css/style.css -o ./assets/css/style.css --watch & tailwindcss -i ./src/css/blocks/list-historial.css -o ./assets/css/blocks/list-historial.css --watch",
		"watch:js": "chokidar 'src/js/*.js' -c 'npm run build:js'",
		"watch": "npm run watch:css & npm run watch:js"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.13",
		"@tailwindcss/postcss": "^4.1.13",
		"tailwindcss": "^4.1.13",
		"terser": "^5.44.0",
		"npm-run-all": "^4.1.5",
		"chokidar-cli": "^3.0.0"
	}
}

