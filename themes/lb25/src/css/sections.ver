/* Section with Glow Effect */
.wp-block-group.section-glow {
  background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.02), transparent 70%);
}

/* Container Styles */
.container-narrow {
  @apply max-w-3xl mx-auto;
}

.container-wide {
  @apply max-w-6xl mx-auto;
}

