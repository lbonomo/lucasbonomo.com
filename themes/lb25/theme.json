{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultDuotone": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "custom": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#1E3A8A",
          "name": "Primary Blue"
        },
        {
          "slug": "secondary",
          "color": "#6B7280",
          "name": "Secondary Gray"
        },
        {
          "slug": "accent",
          "color": "#F59E0B",
          "name": "Accent Orange"
        },
        {
          "slug": "background",
          "color": "#FFFFFF",
          "name": "Background White"
        },
        {
          "slug": "text",
          "color": "#111827",
          "name": "Text Dark"
        },
        {
          "slug": "light-accent",
          "color": "#E5E7EB",
          "name": "Light Gray Accent"
        },
        {
          "slug": "blue-accent",
          "color": "rgb(37, 99, 235)",
          "name": "Blue Accent"
        }
      ]
    },
    "typography": {
      "customFontSize": false,
      "defaultFontSizes": false,
      "fontSizes": [
        {
          "name": "Extra Small",
          "slug": "x-small",
          "size": "0.75rem"
        },
        {
          "name": "Small",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1rem"
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.125rem"
        },
        {
          "name": "Extra Large",
          "slug": "x-large",
          "size": "1.5rem"
        },
        {
          "name": "XX Large",
          "slug": "xx-large",
          "size": "2rem"
        },
        {
          "name": "XXX Large",
          "slug": "xxx-large",
          "size": "3.75rem"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "Inter, Arial, sans-serif",
          "slug": "primary",
          "name": "Primary Font",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontWeight": "100 900",
              "fontStyle": "normal",
              "src": [
                "file:./assets/fonts/InterVariable.woff2"
              ]
            }
          ]
        },
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', sans-serif",
          "slug": "system",
          "name": "System Font"
        }
      ]
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "units": [
        "px",
        "%",
        "em",
        "rem",
        "vw",
        "vh"
      ],
      "customSpacingSize": false,
      "spacingSizes": [
        {
          "name": "Extra Small",
          "slug": "10",
          "size": "0.25rem"
        },
        {
          "name": "Small",
          "slug": "20",
          "size": "0.5rem"
        },
        {
          "name": "Medium",
          "slug": "30",
          "size": "1rem"
        },
        {
          "name": "Large",
          "slug": "40",
          "size": "1.5rem"
        },
        {
          "name": "Extra Large",
          "slug": "50",
          "size": "2rem"
        },
        {
          "name": "XX Large",
          "slug": "60",
          "size": "3rem"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)"
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "bold"
        },
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--blue-accent)",
          "text": "var(--wp--preset--color--background)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "bold"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem",
            "left": "2rem",
            "right": "2rem"
          }
        },
        "shadow": "0 10px 15px -3px rgba(37, 99, 235, 0.3)"
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "core/button": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "bold"
        },
        "color": {
          "background": "var(--wp--preset--color--blue-accent)"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem",
            "left": "2rem",
            "right": "2rem"
          }
        },
        "shadow": "0 10px 15px -3px rgba(37, 99, 235, 0.3)"
      }
    }
  }
}